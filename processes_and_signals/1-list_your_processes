#!/usr/bin/env bash
# Display all running processes including those without a TTY in a user-friendly format
# Show process hierarchy using ps --forest

echo "USER       PID %CPU %MEM    VSZ   RSS TTY      STAT START   TIME COMMAND"

# Show all processes with the hierarchy and format without limiting to 50 lines
ps -e -o user,pid,%cpu,%mem,vsz,rss,tty,stat,start,time,command --forest

