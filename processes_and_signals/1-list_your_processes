#!/usr/bin/env bash
# Display the list of all processes for all users in a user-friendly format
# and include the process hierarchy (without missing any non-TTY processes)
echo "USER       PID %CPU %MEM    VSZ   RSS TTY      STAT START   TIME COMMAND"

# Use 'ps' to get the required fields for all processes, and include --forest to show the hierarchy
ps -eo user,pid,pcpu,pmem,vsz,rss,tty,stat,start,time,command --sort=user --forest | head -50


