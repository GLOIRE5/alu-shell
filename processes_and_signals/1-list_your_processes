#!/usr/bin/env bash
# Loop through the /proc directory, checking each process folder
for pid in /proc/[0-9]*/; do
  # Check if the process name contains "bash"
  if grep -q bash "$pid/comm" 2>/dev/null; then
    # Retrieve the user, full start time, and command name
    user=$(stat -c '%U' "$pid")  # Get the user who owns the process
    start=$(ls --full-time "$pid" | grep comm | awk '{print $6, $7}')  # Get full start time
    command=$(cat "$pid/comm")  # Get the command name

    # Print the process details in the expected format
    echo "$user $start $command"
  fi
done

